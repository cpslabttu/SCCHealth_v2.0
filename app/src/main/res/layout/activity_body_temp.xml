<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="app.esarp.SCC_Health.FluActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1">
        <TextView
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Info"
            android:background="@drawable/gradient"
            android:textColor="#0010ff"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
        <TextView
            android:id="@+id/inst"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="Instruction"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="#0010ff"
            android:background="@drawable/gradient" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1">
        <TextView
            android:id="@+id/active_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Profile:\t"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/maindisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:typeface="serif"
        android:layout_below="@+id/layout2"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/md6_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/md2_colorline"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/active_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/md3_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

            <ImageView
                android:id="@+id/arrow11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_up" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/md4_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textbdt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature-\t" />

            <TextView
                android:id="@+id/display_bdt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/texteoi"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severity Rating-\t" />

            <TextView
                android:id="@+id/display_eoi"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/md5_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textprompt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestion-\t" />

            <TextView
                android:id="@+id/display_prompt"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/md1_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textdatetime"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test time and date-\t" />

            <TextView
                android:id="@+id/datetime"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="Status : Not connected"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cScanner"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:text="connect scanner"
            android:padding="5dp"
            android:textAlignment="center"
            android:onClick="connectScanner"
            android:textColor="#0010ff"
            android:background="@drawable/gradient" />
        <!--<View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />-->
        <Button
            android:id="@+id/test"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:text="Start test"
            android:onClick="setup"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#0010ff"
            android:background="@drawable/gradient" />
        <Button
            android:id="@+id/displayResult"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:onClick="tempAlgorithm"
            android:layout_height="wrap_content"
            android:text="Compute"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#0010ff"
            android:background="@drawable/gradient" />
    </LinearLayout>

</LinearLayout>


